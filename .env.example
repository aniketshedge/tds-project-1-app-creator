FLASK_ENV=production

SESSION_COOKIE_NAME=app_session
SESSION_TTL_SECONDS=86400
SESSION_COOKIE_SECURE=false

GITHUB_OAUTH_CLIENT_ID=replace-with-github-oauth-client-id
GITHUB_OAUTH_CLIENT_SECRET=replace-with-github-oauth-client-secret
GITHUB_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/github/callback
GITHUB_OAUTH_SCOPE=repo read:user user:email

REDIS_URL=redis://127.0.0.1:6379/0
DATABASE_PATH=./data/tasks.db
WORKSPACE_ROOT=/tmp/task-runner
ATTACHMENT_ROOT=./data/attachments
FRONTEND_DIST=./frontend/dist
LOG_FILE=./server.log

REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
ATTACHMENT_MAX_BYTES=5242880
JOB_SECRET_TTL_SECONDS=7200
ALLOW_MANIFEST_COMMANDS=false
PERPLEXITY_DEFAULT_MODEL=sonar-pro

CORS_ALLOW_ORIGIN=*
