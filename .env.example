FLASK_ENV=production

SESSION_COOKIE_NAME=app_session
SESSION_TTL_SECONDS=86400
SESSION_COOKIE_SECURE=false

GITHUB_APP_CLIENT_ID=replace-with-github-app-client-id
GITHUB_APP_CLIENT_SECRET=replace-with-github-app-client-secret
GITHUB_APP_CALLBACK_URL=http://localhost:8000/api/auth/github/callback
GITHUB_APP_SCOPE=repo read:user user:email
GITHUB_APP_SLUG=
FRONTEND_CALLBACK_PATH=/
APP_BASE_PATH=/
VITE_APP_BASE_PATH=/

REDIS_URL=redis://127.0.0.1:6379/0
DATABASE_PATH=./data/tasks.db
WORKSPACE_ROOT=/tmp/task-runner
PACKAGE_ROOT=./data/packages
PREVIEW_ROOT=./data/previews
FRONTEND_DIST=./frontend/dist
LOG_FILE=./server.log

REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
JOB_SECRET_TTL_SECONDS=7200
ALLOW_MANIFEST_COMMANDS=false
PREVIEW_TTL_SECONDS=3600
MAX_REQUEST_BYTES=131072
MAX_ACTIVE_JOBS_PER_SESSION=3
MAX_PENDING_QUEUE_JOBS=30
MAX_LIVE_PREVIEWS_PER_SESSION=5
JOB_SUBMIT_LIMIT_PER_MINUTE=8
DEPLOY_SUBMIT_LIMIT_PER_MINUTE=8
PREVIEW_CREATE_LIMIT_PER_MINUTE=12

CORS_ALLOW_ORIGIN=*
